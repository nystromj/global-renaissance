<project name="world" default="jar">
  <property name="bindir"      value="${basedir}/bin" />
  <property name="srcdir"      value="${basedir}/src" />
  <property name="testsrcdir"  value="${basedir}/test" />
  <property name="jarname"     value="${basedir}/dooplogs.jar" />
  <property name="hadoop-home" value="/Users/Nelle/Documents/coding/text_analysis/hadoop-1.2.1" />
  <property name="hadoop-libs" value="${hadoop-home}/lib" />
  <property name="hadoop-contrib" value="${hadoop-home}/contrib" />
    

  <target name="compile" depends="clean" description="Compile all Java sources">
    <mkdir dir="${bindir}" />
    <javac destdir="${bindir}" deprecation="on" debug="on">
      <src path="${srcdir}" />
      <src path="${testsrcdir}" />
      <classpath>
        <fileset dir="${hadoop-libs}">
          <include name="*.jar" />
        </fileset>
        <fileset dir="${hadoop-home}">
          <include name="*.jar" />
        </fileset>
      </classpath>
    </javac>
  </target>

  <target name="jar" depends="compile" description="Package the classes into a .jar file">
    <jar destfile="${jarname}" basedir="${bindir}" />
  </target>

  <target name="clean" description="Remove all compilation products to ensure a clean build">
    <delete dir="${bindir}" />
    <delete file="${jarname}" />
  </target>
</project>
